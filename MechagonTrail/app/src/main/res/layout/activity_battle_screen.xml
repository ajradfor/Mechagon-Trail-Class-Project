<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="doslosmuertos.mechagontrail.battleScreen"
    android:background="#ff000000">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attack"
        android:id="@+id/attackButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="81dp"
        android:width="175dp"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use Item"
        android:id="@+id/useItemButton"
        android:layout_alignTop="@+id/attackButton"
        android:layout_toEndOf="@+id/attackButton"
        android:width="175dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUN!"
        android:id="@+id/runButton"
        android:width="175dp"
        android:layout_below="@+id/useItemButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mechHealth"
        android:id="@+id/mechHealth"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enemyHealth"
        android:id="@+id/enemyHealth"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/useItemButton"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/winLose"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mech Health"
        android:id="@+id/mechHealthTitle"
        android:layout_above="@+id/mechHealth"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enemy Health"
        android:id="@+id/enemyHealthTitle"
        android:layout_alignTop="@+id/mechHealthTitle"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFFFF" />

</RelativeLayout>
